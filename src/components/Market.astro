---
import Arrow from '../icons/Arrow.astro';
import Download from '../icons/Download.astro';
import GitHub from '../icons/GitHub.astro';

const response = await fetch('http://localhost:8080/api/extensions');

type Extension = {
    id: string;
    imageUrl: string;
    name: string;
    description: string;
    downloadUrl: string;
    category: string;
};

const data = await response.json();
const extensions: Extension[] = data.extensions;
---

<div class="flex flex-col justify-center items-center text-white text-xl px-4 lg:px-20">
    <h1 class="text-3xl lg:text-5xl font-bold my-6 text-center">
        Extensions List
    </h1>
    <div class="flex flex-wrap justify-center gap-4 font-normal lg:gap-8">
        <a href="#" target="_blank" class="flex items-center gap-2 text-white bg-gradient-to-r from-[#00bf63] to-[#15193e] rounded-xl px-4 py-2 lg:px-6 lg:py-3 transition-colors duration-300 hover:from-[#00d973] hover:to-[#1a1f4a]">
            <Arrow />
            Todos
        </a>
        <a href="#" target="_blank" class="flex items-center gap-2 text-white bg-gradient-to-r from-[#00bf63] to-[#15193e] rounded-xl px-4 py-2 lg:px-6 lg:py-3 transition-colors duration-300 hover:from-[#00d973] hover:to-[#1a1f4a]">
            <GitHub />
            API RESTful
        </a>
    </div>
    <!-- Render cards dynamically -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 lg:gap-10 my-14">
        {extensions.slice(0, 60).map((extension) => (
            <div class="bg-zinc-900 rounded-xl p-6 lg:p-8 flex flex-col space-y-8 transition-all duration-500 border h-[420px] hover:border-[#00d973]">
                <div class="flex items-center space-x-6 my-4">
                    <img src={extension.imageUrl} alt={extension.name} class="w-16 h-16 lg:w-20 lg:h-20 rounded-full" />
                    <div>
                        <h2 class="text-2xl lg:text-3xl font-semibold">{extension.name}</h2>
                        <span class="text-md lg:text-lg text-zinc-500">{extension.category}</span>
                    </div>
                </div>
                <p class="text-zinc-400 flex-grow text-sm lg:text-base leading-relaxed">{extension.description}</p>
                <div class="flex justify-between font-normal">
                    <a href={extension.downloadUrl} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-white bg-gradient-to-r from-[#00bf63] to-[#15193e] px-3 py-2 lg:px-3 lg:py-2.5 rounded-xl transition-colors duration-300 hover:from-[#00d973] hover:to-[#1a1f4a]">
                        <Download />
                        Descargar
                    </a>
                </div>
            </div>
        ))}
    </div>
</div>